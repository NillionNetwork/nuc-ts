{
  "name": "@nillion/nuc",
  "version": "2.0.0-rc.0",
  "license": "MIT",
  "repository": "https://github.com/NillionNetwork/nuc-ts",
  "engines": {
    "node": ">=23"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib.d.mts",
      "import": "./dist/lib.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "fix": "pnpm exec biome check --fix --unsafe && tsc --noEmit",
    "fmt": "pnpm exec biome format --fix",
    "install-hooks": "lefthook install",
    "test": "vitest --run",
    "build": "tsdown"
  },
  "peerDependencies": {
    "pino": "^10.1.0"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@scure/base": "^2.0.0",
    "canonicalize": "^2.0.0",
    "es-toolkit": "^1.42.0",
    "http-status-codes": "^2.3.0",
    "ky": "^1.14.0",
    "multiformats": "^13.4.1",
    "viem": "^2.41.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.15",
    "abitype": "^1.2.1",
    "docker-compose": "^1.3.0",
    "dotenv": "^17.2.3",
    "fast-check": "^4.3.0",
    "lefthook": "^2.0.8",
    "semver": "^7.7.3",
    "tsdown": "^0.16.8",
    "tsx": "^4.21.0",
    "type-fest": "^5.3.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.22.0",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "DOCUMENTATION.md",
    "CONTRIBUTING.md"
  ],
  "tsdown": {
    "entry": "./src/lib.ts",
    "format": "esm",
    "clean": true,
    "alias": {
      "#": "./src",
      "#tests": "./tests"
    }
  }
}
