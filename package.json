{
  "name": "@nillion/nuc",
  "version": "2.0.0",
  "license": "MIT",
  "repository": "https://github.com/NillionNetwork/nuc-ts",
  "files": [
    "CONTRIBUTING.md",
    "dist",
    "DOCUMENTATION.md",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib.d.mts",
      "import": "./dist/lib.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "check": "pnpm exec oxfmt --check && pnpm exec oxlint --type-aware && pnpm exec tsgo -b",
    "fix": "pnpm exec oxfmt && pnpm exec oxlint --fix --type-aware && pnpm exec tsgo -b",
    "fmt": "pnpm exec oxfmt",
    "install-hooks": "lefthook install",
    "test": "vitest --run",
    "build": "tsdown"
  },
  "dependencies": {
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@scure/base": "^2.0.0",
    "es-toolkit": "^1.43.0",
    "multiformats": "^13.4.2",
    "viem": "^2.44.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^25.0.7",
    "@types/semver": "^7.7.1",
    "@typescript/native-preview": "7.0.0-dev.20260113.1",
    "@vitest/coverage-v8": "^4.0.17",
    "abitype": "^1.2.3",
    "fast-check": "^4.5.3",
    "lefthook": "^2.0.14",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "oxlint-tsgolint": "^0.11.0",
    "semver": "^7.7.3",
    "tsdown": "0.20.0-beta.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "pino": "^10.1.0"
  },
  "tsdown": {
    "alias": {
      "#": "./src",
      "#tests": "./tests"
    },
    "clean": true,
    "entry": "./src/lib.ts",
    "format": "esm"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.28.0"
}
